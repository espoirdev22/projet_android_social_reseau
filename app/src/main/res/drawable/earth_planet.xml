<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base de la planÃ¨te -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#4A90E2"
                android:centerColor="#357ABD"
                android:endColor="#1E5F99"
                android:type="radial"
                android:gradientRadius="100dp" />
        </shape>
    </item>

    <!-- Continents -->
    <item android:top="30dp" android:left="40dp" android:right="80dp" android:bottom="90dp">
        <shape android:shape="oval">
            <solid android:color="#2ECC71" />
        </shape>
    </item>

    <item android:top="60dp" android:left="20dp" android:right="120dp" android:bottom="80dp">
        <shape android:shape="oval">
            <solid android:color="#27AE60" />
        </shape>
    </item>

    <item android:top="100dp" android:left="90dp" android:right="40dp" android:bottom="50dp">
        <shape android:shape="oval">
            <solid android:color="#2ECC71" />
        </shape>
    </item>

    <!-- Effet de brillance -->
    <item android:top="20dp" android:left="30dp" android:right="100dp" android:bottom="120dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#66FFFFFF"
                android:centerColor="#22FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="radial"
                android:gradientRadius="40dp" />
        </shape>
    </item>
</layer-list>