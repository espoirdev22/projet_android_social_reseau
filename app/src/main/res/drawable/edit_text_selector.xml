        <shape>
            <solid android:color="#FAFAFA" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="#2196F3" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#F8F8F8" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />
        </shape>
    </item>
</selector>