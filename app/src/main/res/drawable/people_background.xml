<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fond dégradé principal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#FF8A65"
                android:centerColor="#FFAB91"
                android:endColor="#FFCC02"
                android:type="linear" />
        </shape>
    </item>
    <!-- Overlay pour simuler l'effet photo -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#30000000"
                android:endColor="#60000000"
                android:type="linear" />
        </shape>
    </item>
</layer-list>