<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AddEventActivity">

    <!-- Barre supÃ©rieure avec titre et bouton retour -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/addEventToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/backButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Ajouter un Ã©vÃ©nement"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Contenu principal avec scrolling -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/saveEventButton"
        app:layout_constraintTop_toBottomOf="@id/addEventToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section URL d'image -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image de l'Ã©vÃ©nement"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/imageUrlEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="Entrez l'URL de l'image (optionnel)"
                android:inputType="textUri"
                android:padding="12dp" />

            <!-- AperÃ§u de l'image (optionnel) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/imagePreviewCard"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/imagePreviewView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <!-- Champ de titre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/titleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="Entrez le titre de l'Ã©vÃ©nement"
                android:inputType="text"
                android:padding="12dp" />

            <!-- Champ de description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/descriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:gravity="top"
                android:hint="DÃ©crivez votre Ã©vÃ©nement"
                android:inputType="textMultiLine"
                android:padding="12dp" />

            <!-- SECTION DATE ET HEURE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date et heure"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Options de sÃ©lection de date avec Ã©tat sÃ©lectionnÃ© -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/datePickerModeButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/toggle_button_selector"
                    android:padding="12dp"
                    android:text="ðŸ“… SÃ©lecteur"
                    android:textOff="ðŸ“… SÃ©lecteur"
                    android:textOn="ðŸ“… SÃ©lecteur"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:checked="true" />

                <ToggleButton
                    android:id="@+id/manualInputModeButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/toggle_button_selector"
                    android:padding="12dp"
                    android:text="âœï¸ Manuelle"
                    android:textOff="âœï¸ Manuelle"
                    android:textOn="âœï¸ Manuelle"
                    android:textColor="#777777"
                    android:textSize="14sp"
                    android:checked="false" />
            </LinearLayout>

            <!-- Conteneur pour les deux modes de saisie -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp">

                <!-- Mode sÃ©lecteur de date/heure (visible par dÃ©faut) -->
                <LinearLayout
                    android:id="@+id/datePickerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="visible">

                    <!-- SÃ©lection de la date -->
                    <LinearLayout
                        android:id="@+id/datePickerSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_calendar"
                            app:tint="#777777" />

                        <TextView
                            android:id="@+id/selectedDateTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="SÃ©lectionner la date"
                            android:textColor="#777777"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Ligne de sÃ©paration -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="#E0E0E0" />

                    <!-- SÃ©lection de l'heure -->
                    <LinearLayout
                        android:id="@+id/timePickerSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_time"
                            app:tint="#777777" />

                        <TextView
                            android:id="@+id/selectedTimeTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="SÃ©lectionner l'heure"
                            android:textColor="#777777"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- AperÃ§u de la date complÃ¨te -->
                    <TextView
                        android:id="@+id/fullDateTimePreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:background="#F0F8FF"
                        android:text="Date et heure : Non dÃ©finies"
                        android:textColor="#2196F3"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Mode saisie manuelle (masquÃ© par dÃ©faut) -->
                <LinearLayout
                    android:id="@+id/manualDateInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/manualDateEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:hint="JJ/MM/AAAA HH:MM (ex: 25/12/2024 15:30)"
                        android:inputType="text"
                        android:padding="12dp"
                        android:maxLength="16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Format obligatoire: JJ/MM/AAAA HH:MM"
                        android:textColor="#FF9800"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                    <!-- Validation de la saisie manuelle -->
                    <TextView
                        android:id="@+id/manualDateValidationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>
            </FrameLayout>

            <!-- Boutons cachÃ©s pour la compatibilitÃ© -->
            <Button
                android:id="@+id/dateTimeButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dateTimeTextView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <!-- Section de localisation amÃ©liorÃ©e -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localisation"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Champ de recherche d'adresse -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/locationSearchEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="12dp"
                    android:hint="Rechercher une adresse..."
                    android:inputType="text"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/searchLocationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/secondary_button_background"
                    android:padding="12dp"
                    android:text="Rechercher"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Affichage de l'adresse sÃ©lectionnÃ©e -->
            <LinearLayout
                android:id="@+id/selectedLocationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/selected_location_background"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_location"
                        app:tint="#4CAF50" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="Localisation sÃ©lectionnÃ©e :"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/clearLocationButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_clear"
                        app:tint="#777777" />
                </LinearLayout>

                <TextView
                    android:id="@+id/selectedAddressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Adresse sÃ©lectionnÃ©e"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/selectedCoordinatesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Lat: 0.000000, Lng: 0.000000"
                    android:textColor="#777777"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Champs cachÃ©s pour latitude et longitude (pour la compatibilitÃ©) -->
            <EditText
                android:id="@+id/latitudeEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/longitudeEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <!-- Champ cachÃ© pour user_id -->
            <EditText
                android:id="@+id/userIdEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <!-- Ancien champ de lieu en lecture seule -->
            <EditText
                android:id="@+id/locationEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <!-- Bouton d'enregistrement fixÃ© en bas -->
    <Button
        android:id="@+id/saveEventButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/primary_button_background"
        android:padding="14dp"
        android:text="Enregistrer l'Ã©vÃ©nement"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>